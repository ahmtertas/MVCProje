@using Entities.Concrete
@model List<Admin>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">

    <div><tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Status</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr></div>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.AdminId</th>
            <td>@x.AdminUserName</td>
            <td>@x.AdminRole</td>
            <td>Aktif</td>
            <td><a href="/Authorization/DeleteRole/@x.AdminId" class="btn btn-danger">Pasif Yap</a></td>
            <td><a href="/Authorization/EditAdmin/@x.AdminId" class="btn btn-warning">Yetkisini Değiştir</a></td>
        </tr>
    }
</table>
<br />
<a href="/Authorization/AddAdmin" class="btn btn-success">Yeni Admin Tanımla</a>