@model Entities.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Ekle</h2>

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x=>x.HeadingId)
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class="form-control"})
        <br />
        @Html.Label("Yazar")
        @Html.DropDownListFor("Admin Rolü",
                    new SelectList(Enum.GetValues(typeof(Gender))),
                    "Select Gender",
                    new { @class = "form-control" }))
        <br />
        <button class="btn btn-info">Başlık Oluştur</button>
    </div>
}