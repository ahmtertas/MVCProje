
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<button class="btn btn-danger" id="btn1"> Button 1 </button>
<button class="btn btn-success" id="btn2"> Button 2 </button>
<button class="btn btn-primary" id="btn3"> Button 3 </button>
<button class="btn btn-dark" id="btn4"> Button 4 </button>

<script>
    $('#btn1').click(function () {
        swal("Merhaba Mvc Proje Kampı")
    })
</script>
<script>
    $('#btn2').click(function () {
        swal("Here's the title!", "...and here's the text!");
    })
</script>
<script>
    $('#btn3').click(function () {
        swal("Good job!", "You clicked the button!", "success");
    })
</script>
<script>
    $('#btn4').click(function () {
        swal("Click on either the button or outside the modal.")
            .then((value) => {
                swal(`The returned value is: ${value}`);
            });
    })
</script>